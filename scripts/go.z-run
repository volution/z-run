<< go / dependencies / vendor / cleanup
	test "${#}" -eq 0
	
	find ./vendor/ \
			-xdev \
			-not -type d \
			-not -path './sources/vendor/modules.txt' \
			-not -name 'go.mod' \
			-not -name 'go.sum' \
			-not -name '*.go' \
			-not -name '*.c' \
			-not -name '*.h' \
			-not -name '*.s' \
			-delete \
	#
	
	find ./vendor/ \
			-xdev \
			-type d \
			-empty \
			-delete \
	#
